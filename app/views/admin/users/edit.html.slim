.container
  .row
    .col-sm-6.col-sm-offset-3.sign-in-container
      h2.form-signin-heading Edit user
      br
      = bootstrap_form_for @user, url: admin_user_path, method: :patch do |f|
        = f.text_field :email, autofocus: true
        = f.text_field :first_name
        = f.text_field :last_name
        .above
          = f.select :company_id, Company.all.map { |u| [u.name, u.id] },
                 { include_blank: true },
                 { class: 'chosen-select' }
        .sub
          label Permissions
        = f.check_box :csr, label: "CSR"
        div= f.submit "Update user", class: "btn btn-lg btn-primary btn-block"
