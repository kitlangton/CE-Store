h1.text-center Edit

.container
  .row
    .col-sm-6.col-sm-offset-3.sign-in-container
      h2.form-signin-heading Edit company
      br
      = bootstrap_form_for @company do |f|
        = f.text_field :name, autofocus: true, class: "form-control", placeholder: "Company name"
        = f.file_field :brand_image, label: "Brand Image", class: "btn text-center", id: "upload-button"
        div= f.submit "Update company", class: "btn btn-lg btn-primary btn-block"
